<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="isec.memorygame.OpcoesActivity"
    android:background="#a1b9a3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/O_LOpcoes"
        android:id="@+id/opslabel"
        android:textSize="50sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="40dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:layout_below="@+id/opslabel"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/O_LNivel"
            android:id="@+id/nivellabel"
            android:textSize="25sp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingBottom="10dp" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dropNivel"
            android:spinnerMode="dropdown"
            android:layout_alignBottom="@+id/nivellabel"
            android:layout_toRightOf="@+id/nivellabel"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/O_LClique"
            android:id="@+id/cliquelabel"
            android:textSize="25dp"
            android:layout_below="@+id/nivellabel"
            android:layout_alignLeft="@+id/nivellabel"
            android:layout_alignStart="@+id/nivellabel"
            android:paddingBottom="10dp" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dropClick"
            android:spinnerMode="dropdown"
            android:clickable="false"
            android:layout_below="@+id/nivellabel"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/nivellabel"
            android:layout_toRightOf="@+id/nivellabel"
            android:layout_alignBottom="@+id/cliquelabel" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/O_LTempo"
            android:id="@+id/Tempolabel"
            android:textSize="25dp"
            android:visibility="invisible"
            android:layout_above="@+id/OP_LGallery"
            android:layout_alignLeft="@+id/cliquelabel"
            android:layout_alignStart="@+id/cliquelabel" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText"
            android:visibility="invisible"
            android:textSize="23dp"
            android:layout_alignTop="@+id/Tempolabel"
            android:layout_alignLeft="@+id/dropClick"
            android:layout_alignStart="@+id/dropClick"
            android:layout_above="@+id/dropGallery" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/OP_LGallery"
            android:id="@+id/OP_LGallery"
            android:textSize="25dp"
            android:layout_below="@+id/cliquelabel"
            android:layout_alignLeft="@+id/cliquelabel"
            android:layout_alignStart="@+id/cliquelabel"
            android:paddingBottom="10dp" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dropGallery"
            android:spinnerMode="dropdown"
            android:layout_below="@+id/dropClick"
            android:layout_alignLeft="@+id/dropClick"
            android:layout_alignStart="@+id/dropClick"
            android:layout_alignBottom="@+id/OP_LGallery" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/OP_LGerir"
            android:id="@+id/OP_GerirGall"
            android:textSize="17dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</RelativeLayout>
