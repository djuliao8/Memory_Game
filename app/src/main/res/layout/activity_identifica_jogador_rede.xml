<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="isec.memorygame.IdentificaJogadorRede"
    android:background="#a1b9a3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/SPIN_LTituloIns"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/ltituloRede"
        android:textColor="#000000"
        android:textSize="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nomeRede"
        android:id="@+id/labelnomerede"
        android:textColor="#000000"
        android:textSize="25dp"
        android:layout_marginTop="66dp"
        android:layout_below="@+id/ltituloRede"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/nomejrede"
        android:layout_marginTop="52dp"
        android:layout_below="@+id/labelnomerede"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cjRede"
        android:id="@+id/button5"
        android:layout_marginTop="87dp"
        android:layout_below="@+id/nomejrede"
        android:layout_alignRight="@+id/nomejrede"
        android:layout_alignEnd="@+id/nomejrede"
        android:layout_alignLeft="@+id/nomejrede"
        android:layout_alignStart="@+id/nomejrede"
        android:onClick="onBotaoCriar" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/jjRede"
        android:id="@+id/button6"
        android:layout_below="@+id/button5"
        android:layout_alignLeft="@+id/button5"
        android:layout_alignStart="@+id/button5"
        android:layout_alignRight="@+id/button5"
        android:layout_alignEnd="@+id/button5"
        android:onClick="onBotaoJuntar" />
</RelativeLayout>
