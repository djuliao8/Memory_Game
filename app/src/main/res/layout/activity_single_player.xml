<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="isec.memorygame.SinglePlayerActivity"
    android:background="#e0e0e0">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jogadas:"
        android:id="@+id/njogadas"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffffff"
        android:paddingLeft="10dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/njogdaslabel"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:text="0"
        android:layout_toLeftOf="@+id/timer"
        android:layout_toRightOf="@+id/njogadas"
        android:layout_toEndOf="@+id/njogadas"
        android:paddingLeft="10dp"
        android:background="#ffffff"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/njogadas" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome:"
        android:id="@+id/nomelabelSP"
        android:layout_below="@+id/njogadas"
        android:background="#ffffff"
        android:textSize="25sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        android:layout_toLeftOf="@+id/njogdaslabel"
        android:layout_toStartOf="@+id/njogdaslabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="aaa"
        android:id="@+id/nometext"
        android:textSize="25dp"
        android:layout_below="@+id/njogadas"
        android:layout_alignRight="@+id/timer"
        android:layout_alignEnd="@+id/timer"
        android:layout_toEndOf="@+id/njogadas"
        android:background="#ffffff"
        android:layout_toRightOf="@+id/njogadas"
        android:layout_alignBottom="@+id/nomelabelSP" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/pontostext"
        android:textSize="25dp"
        android:layout_below="@+id/nomelabelSP"
        android:layout_toRightOf="@+id/nomelabelSP"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#ffffff"
        android:layout_alignBottom="@+id/pontoslabelSP" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pontos:"
        android:id="@+id/pontoslabelSP"
        android:textSize="25sp"
        android:background="#ffffff"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        android:layout_below="@+id/nomelabelSP"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/nometext"
        android:layout_toStartOf="@+id/nometext" />

    <GridView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gridViewJogo"
        android:choiceMode="multipleChoice"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:minHeight="80dp"
        android:paddingTop="20dp"
        android:layout_below="@+id/pontoslabelSP" />

    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timer"
        android:textSize="25dp"
        android:background="#ffffff"
        android:paddingRight="10dp"
        android:layout_alignTop="@+id/njogdaslabel"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
