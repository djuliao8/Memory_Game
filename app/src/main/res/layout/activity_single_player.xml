<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="isec.memorygame.SinglePlayerActivity"
    android:background="#e0e0e0">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jogadas:"
        android:id="@+id/njogadas"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffffff"
        android:paddingLeft="10dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/njogdaslabel"
        android:textSize="25dp"
        android:text="0"
        android:paddingLeft="10dp"
        android:background="#ffffff"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/timer"
        android:layout_toRightOf="@+id/njogadas"
        android:layout_toEndOf="@+id/njogadas" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome:"
        android:id="@+id/nomeSPlabel"
        android:textColor="#000000"
        android:textSize="25dp"
        android:background="#ffffff"
        android:layout_below="@+id/njogadas"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="10dp"
        android:layout_toLeftOf="@+id/njogdaslabel"
        android:layout_toStartOf="@+id/njogdaslabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/nomeSP"
        android:textSize="25dp"
        android:textColor="#000000"
        android:background="#ffffff"
        android:layout_below="@+id/njogdaslabel"
        android:layout_alignLeft="@+id/njogdaslabel"
        android:layout_alignStart="@+id/njogdaslabel"
        android:layout_alignRight="@+id/timer"
        android:layout_alignEnd="@+id/timer"
        android:paddingLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pontos:"
        android:id="@+id/pontosSPlabel"
        android:textColor="#000000"
        android:textSize="25dp"
        android:background="#ffffff"
        android:layout_below="@+id/nomeSPlabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="10dp"
        android:layout_toLeftOf="@+id/njogdaslabel"
        android:layout_toStartOf="@+id/njogdaslabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/PontoSP"
        android:background="#ffffff"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        android:textSize="25dp"
        android:layout_above="@+id/gridViewJogo"
        android:layout_alignLeft="@+id/nomeSP"
        android:layout_alignStart="@+id/nomeSP"
        android:layout_alignRight="@+id/timer"
        android:layout_alignEnd="@+id/timer" />

    <GridView
        android:id="@+id/gridViewJogo"
        android:choiceMode="multipleChoice"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnWidth="90dp"
        android:numColumns="auto_fit"
        android:horizontalSpacing="10dp"
        android:stretchMode="columnWidth"
        android:gravity="center"
        android:layout_below="@+id/pontosSPlabel" />

    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timer"
        android:textSize="25dp"
        android:background="#ffffff"
        android:paddingRight="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
