<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="isec.memorygame.SinglePlayerActivity"
    android:background="#e0e0e0">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jogadas:"
        android:id="@+id/njogadas"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffffff"
        android:paddingLeft="10dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/njogdaslabel"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:text="0"
        android:layout_toLeftOf="@+id/timer"
        android:layout_above="@+id/gridViewJogo"
        android:layout_toRightOf="@+id/njogadas"
        android:layout_toEndOf="@+id/njogadas"
        android:paddingLeft="10dp"
        android:background="#ffffff"
        android:textColor="#000000" />

    <GridView
        android:id="@+id/gridViewJogo"
        android:choiceMode="multipleChoice"
        android:layout_below="@+id/njogadas"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnWidth="90dp"
        android:numColumns="auto_fit"
        android:horizontalSpacing="10dp"
        android:stretchMode="columnWidth"
        android:gravity="center"
        />

    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timer"
        android:layout_above="@+id/gridViewJogo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="25dp"
        android:background="#ffffff"
        android:paddingRight="10dp" />

</RelativeLayout>
