        android:theme="@style/Theme.AppCompat.Light.NoActionBar" >
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SobreActivity" />
        <activity android:name=".OpcoesActivity" />
        <activity android:name=".SinglePlayerActivity" />
        <activity android:name=".FimJogoActivity" />
        <activity android:name=".IdentificaJogador" />
        <activity android:name=".IdentificaJogadores" />
        <activity android:name=".MultiPlayerActivity" />
        <activity android:name=".fimMultiActivity" />
        <activity android:name=".HistoricoActivity" />
        <activity android:name=".GalleryActivity" >
        </activity>
        <activity android:name=".AddImageGallery" >
        </activity>
        <activity android:name=".AddGalleryActivity" >
        </activity>
    </application>

</manifest>
